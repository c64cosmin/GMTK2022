uniform vec3 colorOutline = vec3(0.0,0.9,0.5);
uniform sampler2D textureImage;

void fragment(){
	vec4 fontColor = texture(TEXTURE, UV);
	vec4 tex = texture(textureImage, UV+TIME*0.01);
	if(COLOR.rgb == vec3(1.0,0.0,0.0)){
